    <Button
        android:id="@+id/login_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Login" />

    <Button
        android:id="@+id/login_register"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="New user? Register" />





</LinearLayout>